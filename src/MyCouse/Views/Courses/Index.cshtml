@model List<CourseViewModel>

<h1>@ViewData["Title"]</h1>

<!--Si scorre quello che è stato passato alla view dal controller che l'ha recuperato dal model'-->
@foreach(CourseViewModel course in Model)
{ 
<div class="row course">

    <div class="col-md-1">
        <img src="@course.ImagePath" width="50" />
    </div>

    <div class="col-md-5">
        <h2>@course.Title</h2>
        <author>di @course.Author</author>
    </div>

    <div class="col-md-2 rating" title="@course.Rating">
        @for (int i = 1; i <= 5; i++)
        {
            //es 3.4
            if (course.Rating >= i)
            {
                //fino a 3 mette la stella piena
                <i class="fas fa-star"></i>
            }
            else
            {
                if (course.Rating >= i - 1)
                {
                    //i = 4 mette mezza stella
                    <i class="fas fa-star-half-alt"></i>
                }
                else
                {
                    //stella vuota
                    <i class="far fa-star"></i>
                }
            }
        }
    </div>

    <div class="col-md-2 price">
        @course.CurrentPrice 
        @if(!course.CurrentPrice.Equals(course.FullPrice))
        { 
            <br/><s>@course.FullPrice</s>
        }
    </div>

    <div class="col-md-2 d-flex align-items-center">
        <a class="btn btn-outline-primary "asp-action="Detail" asp-controller="Courses" asp-route-id="@course.Id">Dettaglio corso 5</a>
    </div>
</div>
}


